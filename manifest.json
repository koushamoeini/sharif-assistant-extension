{
  "manifest_version": 3,
  "name": "دستیار شریف",
  "version": "1.0",
  "description": "نسخه ساده شده افزونه دستیار: تقویم، دسترسی سریع، و یادداشت‌ها.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png"
  },
  "action": {
    "default_popup": "src/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "src/index.html"
  }
}